{% for index,result in results %}
    {% if questionnaire.id == result.questionnaireId %}
        <div class="t-questionnaire-charts-wrapper pb-3">
            <result-chart-gauge :chart-height="280" chart-value="{{ result.value }}"
                                the-url=""
                                tick-color="#666"
                                chart-color="{{ result.categoryColor }}">
            </result-chart-gauge>
            <div class="text-center">{{ result.questionnaireName }}<br>
                <span class="tr-small-2">
                        <span>Stand: {{ result.creationDate | date("d.m.Y") }}</span>
                         |
                        <b>{{ result.users }}</b> Lehrkräfte
                    </span>
                {#                            <span class="small-text">{{ avrg.detail|raw }}</span>/ #}
            </div>
        </div>
    {% else %}
        <a style="cursor: pointer !important;" class="tr-color-black-100 tr-text-decoration-none"
           href="{{ path('dashboard_school_potential_questionnaire', {questionnaire:result.questionnaireId}) }}">
            <div class="t-questionnaire-charts-wrapper pb-3 tr-opacity-50 tr-cursor-pointer">
                <result-chart-gauge :chart-height="280" chart-value="{{ result.value }}"
                                    the-url=""
                                    tick-color="#666"
                                    chart-color="#999">
                </result-chart-gauge>
                <div class="text-center">{{ result.questionnaireName }}<br>
                    <span class="tr-small-2">
                        <span>Stand: {{ result.creationDate | date("d.m.Y") }}</span>
                         |
                        <b>{{ result.users }}</b> Lehrkräfte
                    </span>
                    {#                            <span class="small-text">{{ avrg.detail|raw }}</span>/ #}
                </div>
            </div>
        </a>
    {% endif %}
{% endfor %}