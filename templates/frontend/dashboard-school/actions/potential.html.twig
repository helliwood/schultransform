{% extends 'frontend/dashboard-school/base.html.twig' %}
{% block school_messages %}
    {{ parent() }}
    {# back btn #}
    <div class="position-absolute tr-back-btn text-white tr-small-0" title="ZurÃ¼ck">
        <a href="{{ path('dashboard_school_home') }}">
            <i class="fad fa-arrow-left tr-display-2 float-left py-2 px-2"></i>
        </a>
    </div>
{% endblock %}
    {% block school_header %}
        {# Account data #}
        {% include "frontend/dashboard-school/actions/child-templates/potential/account.html.twig" %}

    {% endblock %}

    {% block school_content %}

        {% block potential_title_questionnaire_charts %}
            {# hr & title #}
            <div class="mt-3 mb-2 py-1 tr-line">
                <p>
                    <span>{% trans  from 'dashboard' %}schoolPotentialTitleStart{% endtrans %}</span>
                    <span> <b>{{ category.name }}</b></span>
                    <span> {% trans  from 'dashboard' %}schoolPotentialTitleEnd{% endtrans %}</span>
                </p>
            </div>
        {% endblock %}

        {# charts by questionnaire #}
        <div class="m-0 white-bg-color">
            {% include "frontend/dashboard-school/actions/child-templates/potential/questionnaries-charts.html.twig" %}
        </div>

        {# support packet #}
        {# hr & title #}
        <div class="mt-3 mb-2 py-1 tr-line d-flex justify-content-between">
            <p class="m-0">
                <b>{% trans  from 'dashboard' %}supportPackage{% endtrans %}</b> {% if user.school | default(null) %}{{ user.school.name }}{% endif %}
            </p>
            <i class="fad fa-arrow-up tr-rotate-45 float-right text-primary tr-text-grow- mr-3 mr-sm-0"></i>
        </div>
        {% include "frontend/dashboard-school/actions/child-templates/potential/support-package.html.twig" %}

        {# hr & title #}
        <div class="mt-3 mb-2 py-1 tr-line">
            <p>{% trans  from 'dashboard' %}documentation{% endtrans %}</p>
        </div>
        {# Dokumentation & Materialien #}
        {% include "frontend/dashboard-teacher/actions/child-templates/category-overview/documentation-and-materials.html.twig" %}


    {% endblock %}

    {% block school_footer %}
        <div class="mt-2 mb-2 py-1 tr-line">
            <p>{% trans  from 'dashboard' %}furtherInformation{% endtrans %}</p>
        </div>
        <div class="d-flex justify-content-around flex-column flex-md-row">
            {% include "frontend/dashboard-general/additional-information.html.twig" %}
        </div>

    {% endblock %}
