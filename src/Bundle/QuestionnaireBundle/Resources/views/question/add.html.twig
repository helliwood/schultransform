{% extends 'base.html.twig' %}

{% block body %}
    <h1>Frage hinzufügen</h1>
    <div class="row">
        <div class="col">
            <div class="panel">
                <h3>{{ 'Frage'|trans }}</h3>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_row(form.type) }}
                {{ form_row(form.question) }}
                {{ form_row(form.recommendation) }}
                {{ form_row(form.advancedRecommendation) }}
                {{ form_row(form.schoolTypes) }}
                <h3>Überschreibungen</h3>
                <question-override>
                    {{ form_widget(form.overrides) }}
                </question-override>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10 d-flex">
                        <button type="submit" id="save" name="save" class="btn-primary btn">Speichern</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
