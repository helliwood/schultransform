{% extends 'frontend/public.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {# If there's any error, display it to the user #}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1>Login Public User</h1>

        {# Password Input #}
        <label for="inputPassword" class="sr-only">Code</label>
        <input type="textfield" name="code" id="inputPassword" class="form-control" placeholder="Code" required>

        {# CSRF Token Input #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}